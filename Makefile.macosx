#---------------------------------------------------------------------------------------------------
# project basic rules / defines
#---------------------------------------------------------------------------------------------------
INCLUDES+= -I./
INCLUDES+= -I./include
INCLUDES+= -I./glm-0.9.3.4

LIBS = -framework GLUT -framework OpenGL -lm -lglew
CXX =c++
CXXFLAGS = -ansi -pedantic -W -Wall -g
RM =rm -f

.SUFFIXES:	.cpp .o

.cpp.o: 
	-$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFINES) $(INCLUDES) -o $@ -c $<

#---------------------------------------------------------------------------------------------------
# Files, framework
#---------------------------------------------------------------------------------------------------

HEADERS= \

INLINES= \

SOURCES= \

#---------------------------------------------------------------------------------------------------
# Files, current
#---------------------------------------------------------------------------------------------------

HEADERS+= \


SOURCES+= \
	main.cpp 



#---------------------------------------------------------------------------------------------------
# Terminate all file strings
#---------------------------------------------------------------------------------------------------
HEADERS+= $(NULL)
INLINES+= $(NULL)
SOURCES+= $(NULL)

#---------------------------------------------------------------------------------------------------
# Targets
#---------------------------------------------------------------------------------------------------

OBJECTS = $(SOURCES:cpp=o)

default: cg1_ex5_mac

cg1_ex5_mac: 	$(OBJECTS) $(HEADERS) $(INLINES)
	@echo Linking
	$(CXX) $(CXXFLAGS) $(OBJECTS) $(LIBS) -o $@
	@echo Compilation Complete

clean:
	@echo Deleting up $(OBJECTS) $(PROJECT)
	-$(RM) $(OBJECTS)
	-$(RM) cg1_ex5_mac
	-$(RM) *~
