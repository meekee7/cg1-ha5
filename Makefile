#---------------------------------------------------------------------------------------------------
# project basic rules / defines
#---------------------------------------------------------------------------------------------------
INCLUDES+= -I./
INCLUDES+= -I./glm-0.9.3.4

LIBS = -lm -lGLEW -lGL -lGLU -lglut
CXX =c++
CXXFLAGS = -ansi -pedantic -W -Wall -g -fopenmp -std=c++0x
RM =rm -f

.SUFFIXES:	.cpp .o

.cpp.o: 
	-$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFINES) $(INCLUDES) -o $@ -c $<

#---------------------------------------------------------------------------------------------------
# Files, framework
#---------------------------------------------------------------------------------------------------

HEADERS= \

INLINES= \

SOURCES= \

#---------------------------------------------------------------------------------------------------
# Files, current
#---------------------------------------------------------------------------------------------------

HEADERS+= \
	Scene.h Mesh.h Ray.h Hitresult.h Material.h Light.h

SOURCES+= \
	main.cpp Scene.cpp Ray.cpp Hitresult.cpp Mesh.cpp Material.cpp Light.cpp




#---------------------------------------------------------------------------------------------------
# Terminate all file strings
#---------------------------------------------------------------------------------------------------
HEADERS+= $(NULL)
INLINES+= $(NULL)
SOURCES+= $(NULL)

#---------------------------------------------------------------------------------------------------
# Targets
#---------------------------------------------------------------------------------------------------

OBJECTS = $(SOURCES:cpp=o)

default: cg1_ex5

cg1_ex5: 	$(OBJECTS) $(HEADERS) $(INLINES)
	@echo Linking
	$(CXX) $(CXXFLAGS) $(OBJECTS) $(LIBS) -o $@
	@echo Compilation Complete

clean:
	@echo Deleting up $(OBJECTS) $(PROJECT)
	-$(RM) $(OBJECTS)
	-$(RM) cg1_ex5
	-$(RM) *~
